{
  "name": "htv_demo",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "dist/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "mongo:start": "docker run --rm -d -p 27017:27017 --name htv_demo mongo:4",
    "mongo:stop": "docker stop htv_demo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.1.0",
    "@fastify/swagger": "^8.14.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "mercurius": "^14.1.0",
    "mongodb": "^6.8.0",
    "nexus": "^1.3.0",
    "pino": "^9.3.1",
    "rotating-file-stream": "^3.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.14.11",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.5.3"
  }
}
